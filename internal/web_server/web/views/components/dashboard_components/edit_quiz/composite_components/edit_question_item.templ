package composite_components

import (
	"github.com/Molnes/Nyhetsjeger/internal/models/questions"
	"github.com/Molnes/Nyhetsjeger/internal/web_server/web/views/components/dashboard_components/edit_quiz"
)

// This is a composite component and is used to return multiple components from the server.
// It contains the QuestionListItem and ErrorText components.
// If the question is nil or the question text is empty, the QuestionListItem will not be rendered.
templ EditQuestionItem(question *questions.Question, errorText string) {
	if question.Text != "" {
		@dashboard_components.QuestionListItem(question)
	}
	@dashboard_components.ErrorText("error-question", errorText)
}
