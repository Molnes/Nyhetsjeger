package user_admin

import "github.com/Molnes/Nyhetsjeger/internal/models/users"

templ UserTable(rows []users.UserTableRow, page int) {
	<table
		class="table-fixed w-full border-separate border-spacing-0 rounded-lg border-2 border-black
        [&_td]:border-x [&_td]:border-black [&_tr]:h-8"
	>
		<thead class="">
			<tr class="[&>th]:border-x [&>th]:border-black">
				<th>Username</th>
				<th>Test data</th>
				<th>Test data2</th>
				<th>Info</th>
			</tr>
		</thead>
		<tbody
			class="
                [&_tr:nth-child(odd)]:bg-purple-100  
                [&>tr:last-child]:border-b [&>tr:last-child]:border-black"
		>
			for _, row := range rows {
				@UserRow(row.Username, row.Score, row.Placement)
			}
		</tbody>
		<tfoot>
			<tr>
				<td class="text-right border-t border-black" colspan="4">&lt; 1 2 3 ... 20 &gt;</td>
			</tr>
		</tfoot>
	</table>
}
