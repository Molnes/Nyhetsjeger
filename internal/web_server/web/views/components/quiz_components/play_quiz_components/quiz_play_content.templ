package play_quiz_components

import (
	"fmt"

	"github.com/Molnes/Nyhetsjeger/internal/models/users/user_quiz"
	"github.com/Molnes/Nyhetsjeger/internal/web_server/web/views/components/icons"
	"time"
	"github.com/Molnes/Nyhetsjeger/internal/utils"
)

// Content of a quiz play page.
templ QuizPlayContent(data *user_quiz.QuizData) {
	<section
		id="quiz-play-content"
		class="flex flex-col items-center py-2 gap-6"
	>
		<div class="flex justify-between items-center w-full ">
			<div class="w-24">
				<a href="/quiz" aria-label="Lukk quiz">
					@icons.Cross(3, "black", 40, 40)
				</a>
			</div>
			@timer(data.SecondsLeft, data.CurrentQuestion.TimeLimitSeconds)
			<div class="w-24 text-right">
				@PointsDisplay(data.PointsGathered)
			</div>
		</div>
		if data.CurrentQuestion.ImageURL.String() != "" {
			<img
				class="h-48 lg:h-60 object-cover rounded-card shadow-md mx-auto"
				src={ data.CurrentQuestion.ImageURL.String() }
				alt=""
			/>
		}
		<h2 class="text-2xl font-bold text-center">{ data.CurrentQuestion.Text }</h2>
		@AnswerButtons(&data.CurrentQuestion)
		@progressBar(data.CurrentQuestion.Arrangement, data.PartialQuiz.QuestionNumber)
		if !utils.IsUserAuthenticated(ctx) {
			@saveQuestiontimestamp(time.Now())
		}
	</section>
}

// Template for a simple progress bar built with divs.
templ progressBar(current uint, total uint) {
	<div
		class="flex justify-center items-center gap-2 isolate"
		role="progressbar"
		aria-label="Spørsmål"
		aria-valuemin="0"
		aria-valuenow={ fmt.Sprint(current) }
		aria-valuemax={ fmt.Sprint(total) }
	>
		for i := uint(0); i < total; i++ {
			<div
				if i < current {
					class="flex flex-col justify-center w-6 h-6 bg-gray-600 rounded-1/2"
				} else {
					class="flex flex-col justify-center w-6 h-6 bg-gray-400 rounded-1/2"
				}
			>
				if i < total-1 {
					<div
						if i+1 < current {
							class="w-4 h-2 bg-gray-600 relative -right-5 -z-10"
						} else {
							class="w-4 h-2 bg-gray-400 relative -right-5 -z-10"
						}
					></div>
				}
			</div>
		}
	</div>
}
